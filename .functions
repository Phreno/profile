lire(){
  text="${1?"pas de texte en entrée"}"
  speach="$(mktemp /tmp/output.XXXXXXXXXX).wav" 1>&- 2>&-
  pico2wave -w "${speach}" -l fr-FR "${text}" 1>&- 2>&-
  play "${speach}" 1>&- 2>&-
  rm "${speach}" 
}

tcidu(){
  text="${1?"pas de texte en entrée"}"
  speach="$(mktemp /tmp/output.XXXXXXXXXX).wav" 1>&- 2>&-
  #pico2wave -w "${speach}" -l fr-FR "${text}" 1>&- 2>&-
  espeak -v jbo "${text}" -w "${speach}"
  play "${speach}" 1>&- 2>&-
  rm "${speach}" 
}
